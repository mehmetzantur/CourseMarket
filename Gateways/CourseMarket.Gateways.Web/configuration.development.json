        {
          "Host": "localhost",
          "Port": 5014
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/services/order/{everything}",
      "UpstreamHttpMethod": [ "POST", "PUT", "GET", "DELETE" ],
